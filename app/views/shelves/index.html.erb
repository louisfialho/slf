<h2> My shelves </h2>

<% if policy(Shelf).create? %>
  <%= link_to 'Create shelf', new_shelf_path %>
<% end %>


<ul>
  <% current_user.shelves.each do |shelf| %>
    <% if policy(shelf).show? %> <!-- pas utile pr l'instant -->
      <li><%= link_to shelf.name, shelf_path(shelf) %></li>
    <% end %>
  <% end %>
</ul>


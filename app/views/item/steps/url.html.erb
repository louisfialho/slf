<!-- BEGINNING OF NAVBAR -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "shelf", root_path, class: "logo" %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if @shelf %>
      <%= link_to image_tag("Plus.png", width: 45).html_safe, shelf_path(@shelf), class: 'rotated' %>
    <% elsif @space %>
      <%= link_to image_tag("Plus.png", width: 45).html_safe, space_path(@space), class: 'rotated' %>
    <% end %>
  </div>
</div>
<!-- END OF NAVBAR -->


<h1 class="question">What is the URL 🌐 of this new object ? </h1>

<% if @shelf %>
  <%= simple_form_for @item, method: :put, url: wizard_path, html: { autocomplete: 'off' } do |f| %>
        <%= f.input :url, autofocus: true, label: false, html: {autocomplete: 'disabled'}, input_html: { class: "inp-txt" } %>
        <%= f.hidden_field :shelf_id, :value => @shelf.id %>
        <div class='buttonHolder'> <%= f.submit "Next", class: "add-btn" %> </div>
  <% end %>

<% elsif @space %>

  <%= simple_form_for @item, method: :put, url: wizard_path, html: { autocomplete: 'off' } do |f| %>
        <%= f.input :url, autofocus: true, label: false, html: {autocomplete: 'disabled'}, input_html: { class: "inp-txt" } %>
        <%= f.hidden_field :space_id, :value => @space.id %>
        <%= f.hidden_field :parent_id, :value => @space.id %> <!-- apparently for Pundit -->
        <div class='buttonHolder'> <%= f.submit "Next", class: "add-btn" %> </div>
  <% end %>

<% end %>














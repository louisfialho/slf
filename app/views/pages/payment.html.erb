<div class="payment-ctn">
  <% if @user.tts_balance_in_min.nil? %>
    <h1 class="payment-benefit">👂 Leverage audio to learn more</h1>
  <% else %>
    <h1 class="payment-benefit">⏳ You have <%= @user.tts_balance_in_min.truncate() %> minutes of audio left</h1>
  <% end %>
  <h2 class="benefit-dsc">Turn any blog post 📄, newsletter 🗞 or news article 📰  into audio using <u> <%= link_to('the world’s most natural souding voice.', shelf_path(Shelf.find(20).username)) %> </u></h2>
  <div class="pricing-plan-ctn">
    <p id='price'>$5</p>
    <p id='plan-detail'>Generate <strong>2.5 hours</strong> of audio</p>
    <ul id="guarantees">
      <li class='guarantee'>✅ One-time payment</li>
      <li class='guarantee'>✅ Credits never expire</li>
      <li class='guarantee'>✅ Money-back guarantee</li>
    </ul>
    <form action="/create-checkout-session" method="POST">
      <button type="submit" id="checkout-button">
        Start learning
      </button>
    </form>
  </div>
</div>
<div class="audio-ctn">
  <audio id="audioPlaybackPayment" controls preload="auto">
    <source id="audioSource" type="audio/mp3" src="https://polly-async.s3.eu-west-2.amazonaws.com/6c13f246-6820-4614-8dc6-8e49ff6952dd.mp3">
  </audio>
</div>


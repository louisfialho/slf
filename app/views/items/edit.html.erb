<% if @shelf %>
  <%= simple_form_for (@item) do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.input :medium, collection: Item::MEDIUM %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.input :status, collection: Item::STATUS %>
    <%= f.input :rank, collection: Item::RANK %>
    <%= f.label :notes %>
    <%= f.text_field :notes %>
    <%= f.hidden_field :shelf_id, :value => @shelf.id %>
    <%= f.submit "Add item" %>
  <% end %>
<% elsif @space %>
  <%= simple_form_for (@item) do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.input :medium, collection: Item::MEDIUM %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.input :status, collection: Item::STATUS %>
    <%= f.input :rank, collection: Item::RANK %>
    <%= f.label :notes %>
    <%= f.text_field :notes %>
    <%= f.hidden_field :space_id, :value => @space.id %> <!-- for controller -->
    <%= f.hidden_field :parent_id, :value => @space.id %> <!-- for pundit -->
    <%= f.submit "Add item" %>
  <% end %>
<% end %>

<%= link_to 'Cancel', url_for(:back) %>



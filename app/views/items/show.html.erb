<!-- OPTIONS -->
    <div class="options-ctn item-options" id="options" style="display:none;">
      <div>
        <a class="option" id="move-to"> ðŸ‘‰  Move object</a>
      </div>
      <div>
        <% if @shelf %>
          <%= link_to "ðŸ—‘  Delete object", item_path(@item, shelf_id: @shelf.id), method: :delete, class: "option" %>
        <% elsif @space %>
          <%= link_to "ðŸ—‘  Delete object", item_path(@item, space_id: @space.id), method: :delete, class: "option" %>
        <% end %>
      </div>
    </div>
<!-- END OF OPTIONS -->

<!-- MOVE TO LIST -->
<div class="options-ctn" id="move-to-list" style="display:none;" data-type="item" data-item-id="<%= @item.id %>" data-shelf-id="<%= @shelf.id %>">
  <div id="top-line">
    <%= image_tag("left_arrow.png", width: 23, height: 25, style: 'display:none;', id: 'left-arrow-img').html_safe %>
    <p class="option" id="top-element">Shelf</p>
  </div>
  <hr/>
  <ul id="children-spaces">
  <% move_to_space_list.each do |space| %>
    <li>
      <a class="option" id="child-space-<%= space.id %>" data-space-id="<%= space.id %>">ðŸ—„ <%= truncate(space.name, length: 25) %></a>
    </li>
  <% end %>
  </ul>
    <div id="button-new-space-parent">
      <%= image_tag("grey_plus.png", width: 18, height: 18, id: 'grey-plus-img').html_safe %>
      <div id="new-space-txt">New</div>
    </div>
  <%= button_to "ðŸ‘‰ Move to shelf", { controller: "items", action: "move_to_shelf", item_id: @item.id }, id: 'move-to-button' %>
</div>
<!-- END OF MOVE TO LIST -->



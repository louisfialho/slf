<!-- BEGINNING OF NAVBAR -->
<div class="navbar navbar-expand-sm navbar-light" id="navshow">

  <%= link_to "shelf", root_path, class: "logo" %>

    <h1 class="item-title">
      <a target="_blank" rel="noopener noreferrer" href="<%= @item.url %>">
        <%= @item.name   %>
        <% if @item.medium == "book" %>
          ğŸ“•
        <% elsif @item.medium == "podcast" %>
          ğŸ™
        <% elsif @item.medium == "video" %>
          ğŸ“º
        <% elsif @item.medium == "web" %>
          ğŸ’»
        <% elsif @item.medium == "other" %>
          ğŸ”
        <% end %>
      </a>
    </h1>

    <div class="buttons-ctn-item-show">
      <i class="fas fa-ellipsis-v fa-2x options"></i>
      <% if @shelf %>
        <%= link_to '<i class="fas fa-plus fa-2x fa-rotate-45"></i>'.html_safe, shelf_path(@shelf) %>
      <% elsif @space %>
        <%= link_to '<i class="fas fa-plus fa-2x fa-rotate-45"></i>'.html_safe, space_path(@space) %>
      <% end %>
    </div>
</div>
<!-- END OF NAVBAR -->

<!-- OPTIONS -->
    <div class="options-ctn">
      <div>
        <%= image_tag "Arrow - Right.png", alt: "Move", width: 19 %>
        <a class="option">Move object</a>
      </div>
      <div>
        <% if @shelf %>
          <%= link_to image_tag("Delete.png", width: 19), item_path(@item, shelf_id: @shelf.id), method: :delete %>
          <%= link_to "Delete object", item_path(@item, shelf_id: @shelf.id), method: :delete, class: "option" %>
        <% elsif @space %>
          <%= link_to "Delete object", item_path(@item, space_id: @space.id), method: :delete, class: "option" %>
        <% end %>
      </div>
      <div>
      <%= image_tag "Edit.png", alt: "Edit", width: 19 %>
      <a class="option">Edit object</a>
      </div>
    </div>
<!-- END OF OPTIONS -->


<!-- UPDATE BUTTONS -->
<div class='update-btns'>
  <button class='update-btn active-btn' id='update-status'>
    <% if @item.status == 'not started'%>
      ğŸ™… Not started
    <% elsif @item.status == 'in progress'%>
      ğŸ§‘â€ğŸ’» In progress
    <% elsif @item.status == 'finished'%>
      ğŸ’† Finished
    <% end %>
  </button>

  <button class='update-btn active-btn' id='update-rank'>
    <% if @item.rank == 'low'%>
      ğŸ˜´ Low rank
    <% elsif @item.rank == 'medium'%>
      ğŸ¤” Medium rank
    <% elsif @item.rank == 'high'%>
      ğŸ˜± High rank
    <% end %>

  </button>
</div>
<!-- END OF UPDATE BUTTONS -->

<% if @shelf %>
  <%= simple_form_for (@item) do |f| %>
    <div class='filter-boxes'>
      <div class='buttons-ctn' id='opts-status' style="display:none;"> <%= f.input :status, label: false, collection: [['ğŸ™… Not started', 'not started'], ['ğŸ§‘â€ğŸ’» In progress', 'in progress'], ['ğŸ’† Finished', 'finished']], as: :radio_buttons, input_html: { onchange: "this.form.submit()", class: "tag-selector select-btn" } %> </div>
      <div class='buttons-ctn' id='opts-rank' style="display:none;"><%= f.input :rank, label: false, collection: [['ğŸ˜´ Low rank', 'low'], ['ğŸ¤” Medium rank', 'medium'], ['ğŸ˜± High rank', 'high']], as: :radio_buttons, input_html: { onchange: "this.form.submit()", class: "tag-selector select-btn" }%> </div>
    </div>
    <div class='notes'> <!-- A remplacer par une div + globale main-container pr tt edit -->
      <h1 class="item-notes"><%= f.label :notes %></h1>
      <%= f.input :notes, as: :text, placeholder: 'Click to add notes...', label: false, html: {autocomplete: 'disabled'}, :input_html => {:style => 'width: 100%', :rows => 14, class: "txt-area", id: "txt-area" } %>
      <%= f.hidden_field :shelf_id, :value => @shelf.id %>
      <div class='buttonHolder'>
        <%= f.submit "Save notes", class: "add-btn", id: "save-notes", style: "display:none;" %>
      </div>
    </div>
  <% end %>


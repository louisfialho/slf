<!-- BEGINNING OF NAVBAR -->
<div class="navbar navbar-expand-sm navbar-light" id="navshow">
  <div>
    <% if @parent_space %>
      <%= link_to image_tag("left_arrow.png", width: 37).html_safe, space_path(@parent_space) %>
    <% else %>
      <%= link_to image_tag("left_arrow.png", width: 37).html_safe, shelf_path(@shelf) %>
    <% end %>
  </div>

  <div>
    <% if @item.medium == "book" %>
      <%= image_tag "book.png", width: 37 %>
    <% elsif @item.medium == "podcast" %>
      <%= image_tag "podcast.png", width: 37 %>
    <% elsif @item.medium == "video" %>
      <%= image_tag "video.png", width: 37 %>
    <% elsif @item.medium == "web" %>
      <%= image_tag "web.png", width: 37 %>
    <% elsif @item.medium == "other" %>
      <%= image_tag "web.png", width: 37 %>
    <% end %>
  </div>

  <% if policy(@item).destroy? %>
      <%= image_tag "options.png", alt: "Options", width: 37, class: 'item-options', id: 'options-btn' %>
  <% end %>
</div>
<!-- END OF NAVBAR -->

<div class="main-container">
  <a target="_blank" rel="noopener noreferrer" href="<%= @item.url %>">
    <h1 class="item-title">
      <%= @item.name %>
    </h1>
  </a>

  <div class='notes'>
    <% if @shelf %>
      <%= simple_form_for (@item) do |f| %>
        <%= f.input :notes, as: :text, placeholder: 'Click to add notes...', label: false, html: {autocomplete: 'disabled'}, :input_html => {:style => 'width: 100%', class: "txt-area", id: "txt-area" } %>
        <%= f.hidden_field :shelf_id, :value => @shelf.id %>
        <div class='buttonHolder'>
          <%= f.submit "Save notes", class: "add-btn", id: "save-notes", style: "display:none;" %>
        </div>
    <% end %>

    <% elsif @space %>
      <%= simple_form_for (@item) do |f| %>
        <h1 class="item-notes"><%= f.label :notes %></h1>
        <%= f.input :notes, as: :text, placeholder: 'Click to add notes...', label: false, html: {autocomplete: 'disabled'}, :input_html => {:style => 'width: 100%', class: "txt-area", id: "txt-area" } %>
        <%= f.hidden_field :space_id, :value => @space.id %>
        <div class='buttonHolder'>
          <%= f.submit "Save notes", class: "add-btn", id: "save-notes", style: "display:none;" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


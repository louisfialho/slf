<!-- BEGINNING OF NAVBAR -->
<div class="navbar navbar-expand-sm navbar-light" id="navshow">

  <%= link_to "shelf", root_path, class: "logo" %>

    <h1 class="item-title">
      <a target="_blank" rel="noopener noreferrer" href="<%= @item.url %>">
        <% if @item.medium == "book" %>
          📕
        <% elsif @item.medium == "podcast" %>
          🎙
        <% elsif @item.medium == "video" %>
          📺
        <% elsif @item.medium == "web" %>
          💻
        <% elsif @item.medium == "other" %>
          🔍
        <% end %>
        <%= @item.name %>
      </a>
    </h1>

    <div class="buttons-ctn-show buttons-ctn-item-show">
      <div>
        <% if policy(@item).destroy? %>
          <div class="options" id="options-btn">
            <%= image_tag "options.png", alt: "Options", width: 33 %>
          </div>
        <% end %>
      </div>
      <% if @shelf %>
        <%= link_to image_tag("Plus.png", width: 40).html_safe, shelf_path(@shelf), class: 'rotated' %>
      <% elsif @space %>
        <%= link_to image_tag("Plus.png", width: 40).html_safe, space_path(@space), class: 'rotated' %>
      <% end %>
    </div>
</div>
<!-- END OF NAVBAR -->

    <div class="indicator" id="actions" style="display:none;">Actions</div>

<!-- OPTIONS -->
    <div class="options-ctn" id="options" style="display:none;">
      <div>
        <a class="option" id="move-to"> 👉  Move object</a>
      </div>
      <div>
        <% if @shelf %>
          <%= link_to "🗑  Delete object", item_path(@item, shelf_id: @shelf.id), method: :delete, class: "option" %>
        <% elsif @space %>
          <%= link_to "🗑  Delete object", item_path(@item, space_id: @space.id), method: :delete, class: "option" %>
        <% end %>
      </div>
    </div>
<!-- END OF OPTIONS -->

<div class="options-ctn" id="move-to-list" style="display:none;" data-type="item" data-item-id="<%= @item.id %>" data-shelf-id="<%= @shelf.id %>">
  <div id="top-line">
    <%= image_tag("left_arrow.png", width: 23, height: 25, style: 'display:none;', id: 'left-arrow-img').html_safe %>
    <p class="option" id="top-element">Shelf</p>
  </div>
  <hr/>
  <ul id="children-spaces">
  <% move_to_space_list.each do |space| %>
    <li>
      <a class="option" id="child-space-<%= space.id %>" data-space-id="<%= space.id %>">🗄 <%= truncate(space.name, length: 25) %></a>
    </li>
  <% end %>
  </ul>
    <a id="new-space">New</a>
  <%= button_to "👉 Move to shelf", { controller: "items", action: "move_to_shelf", item_id: @item.id }, id: 'move-to-button' %>
</div>

<!-- MOVE TO NEW SPACE, NAME BOX -->
    <div class="options-ctn options-ctn-shelf-space" id="add-space" style="display:none;">
      <p class="option prompt" id="add-space-prompt" > What is the name of this new space? 🗄 </p>
      <%= simple_form_for @child, html: { autocomplete: 'off' } do |f| %>
        <%= f.text_field :name, class: 'txt-inpt' %>
        <%= f.hidden_field :parent_id, :value => @space.id %>
        <%= f.submit "Add space", style: "display: none;" %>
      <% end %>
    </div>
<!-- END OF MOVE TO NEW SPACE, NAME BOX -->


<!-- BEGINNING OF NAVBAR -->
<div class="navbar navbar-expand-sm navbar-light" id="navshow">

  <%= link_to "shelf", root_path, class: "logo" %>

    <h1 class="item-title">
      <a target="_blank" rel="noopener noreferrer" href="<%= @item.url %>">
        <%= @item.name   %>
        <% if @item.medium == "book" %>
          📕
        <% elsif @item.medium == "podcast" %>
          🎙
        <% elsif @item.medium == "video" %>
          📺
        <% elsif @item.medium == "web" %>
          💻
        <% elsif @item.medium == "other" %>
          🔍
        <% end %>
      </a>
    </h1>

    <% if @shelf %>
      <%= link_to '<i class="fas fa-plus fa-lg fa-rotate-45"></i>'.html_safe, shelf_path(@shelf), class: "close-item-show" %>
    <% elsif @space %>
      <%= link_to '<i class="fas fa-plus fa-lg fa-rotate-45"></i>'.html_safe, space_path(@space), class: "close-item-show" %>
    <% end %>
</div>
<!-- END OF NAVBAR -->


<!-- UPDATE BUTTONS -->
<div class='update-btns'>
  <button class='update-btn active-btn' id='update-status'>
    <% if @item.status == 'not started'%>
      🙅 Not started
    <% elsif @item.status == 'in progress'%>
      🧑‍💻 In progress
    <% elsif @item.status == 'finished'%>
      💆 Finished
    <% end %>
  </button>

  <button class='update-btn active-btn' id='update-rank'>
    <% if @item.rank == 'low'%>
      😴 Low rank
    <% elsif @item.rank == 'medium'%>
      🤔 Medium rank
    <% elsif @item.rank == 'high'%>
      😱 High rank
    <% end %>

  </button>
</div>
<!-- END OF UPDATE BUTTONS -->

<% if @shelf %>
  <%= simple_form_for (@item) do |f| %>
    <div class='filter-boxes'>
      <div class='buttons-ctn' id='opts-status' style="display:none;"> <%= f.input :status, label: false, collection: [['🙅 Not started', 'not started'], ['🧑‍💻 In progress', 'in progress'], ['💆 Finished', 'finished']], as: :radio_buttons, input_html: { onchange: "this.form.submit()", class: "tag-selector select-btn" } %> </div>
      <div class='buttons-ctn' id='opts-rank' style="display:none;"><%= f.input :rank, label: false, collection: [['😴 Low rank', 'low'], ['🤔 Medium rank', 'medium'], ['😱 High rank', 'high']], as: :radio_buttons, input_html: { onchange: "this.form.submit()", class: "tag-selector select-btn" }%> </div>
    </div>
    <div class='notes'> <!-- A remplacer par une div + globale main-container pr tt edit -->
      <h1 class="item-notes"><%= f.label :notes %></h1>
      <%= f.input :notes, as: :text, label: false, html: {autocomplete: 'disabled'}, :input_html => {:style => 'width: 100%', :rows => 14, class: "txt-area", id: "txt-area" } %>
      <%= f.hidden_field :shelf_id, :value => @shelf.id %>
    </div>
    <div class='buttonHolder'>
      <%= f.submit "Save notes", class: "add-btn", id: "save-notes", style: "display:none;" %>
    </div>
  <% end %>

<% elsif @space %>
  <%= simple_form_for (@item) do |f| %>
    <div class='filter-boxes'>
    <div class='buttons-ctn' id='opts-status' style="display:none;"> <%= f.input :status, label: false, collection: [['🙅 Not started', 'not started'], ['🧑‍💻 In progress', 'in progress'], ['💆 Finished', 'finished']], as: :radio_buttons, input_html: { onchange: "this.form.submit()", class: "tag-selector select-btn" } %> </div>
    <div class='buttons-ctn' id='opts-rank' style="display:none;"><%= f.input :rank, label: false, collection: [['😴 Low rank', 'low'], ['🤔 Medium rank', 'medium'], ['😱 High rank', 'high']], as: :radio_buttons, input_html: { onchange: "this.form.submit()", class: "tag-selector select-btn" }%> </div>
    </div>
    <%= f.hidden_field :space_id, :value => @space.id %>
  <% end %>
<% end %>












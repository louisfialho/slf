<% if @shelf %>
  <%= simple_form_for (@item) do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.input :medium, collection: ["book", "podcast", "video", "web", "other"] %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.input :status, collection: ["not sarted", "in progress", "finished"] %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.input :rank, collection: ['low', 'medium', 'high'] %>
    <%= f.hidden_field :shelf_id, :value => @shelf.id %>
    <%= f.submit "Add item" %>
  <% end %>
<% elsif @space %>
  <%= simple_form_for (@item) do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.input :medium, collection: ["book", "podcast", "video", "web", "other"] %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.input :status, collection: ["not sarted", "in progress", "finished"] %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.input :rating, collection: ['1', '2', '3', '4', '5', 'Not reviewed yet (Add to queue)'] %>
    <%= f.hidden_field :space_id, :value => @space.id %> <!-- for controller -->
    <%= f.hidden_field :parent_id, :value => @space.id %> <!-- for pundit -->
    <%= f.submit "Add item" %>
  <% end %>
<% end %>

<%= link_to 'Cancel', url_for(:back) %>



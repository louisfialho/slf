<% if @shelf %>
  <%= simple_form_for (@item) do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.input :medium, collection: ["book", "e-book", "website", "blogpost", "news article", "podcast", "video", "online course", "documentary", "movie", "github repository", "tweet"] %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.input :rating, collection: ['1', '2', '3', '4', '5', 'Not reviewed yet (Add to queue)'] %>
    <%= f.hidden_field :shelf_id, :value => @shelf.id %>
    <%= f.submit "Add item" %>
  <% end %>
<% end %>

<%= link_to 'Cancel', url_for(:back) %>



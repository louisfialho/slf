<% if @shelf %>
  <%= form_for(@space) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.hidden_field :shelf_id, :value => @shelf.id %>
    <%= f.submit %>
  <% end %>
<% elsif @child %>
  <%= form_for(@child) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.hidden_field :parent_id, :value => @parent.id %>
    <%= f.submit %>
  <% end %>
<% end %>

<%= link_to 'Cancel', url_for(:back) %>


<!-- BEGINNING OF NAVBAR -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "shelf", root_path, class: "logo" %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if @shelf %>
      <%= link_to image_tag("Plus.png", width: 45).html_safe, shelf_path(@shelf), class: 'rotated' %>
    <% elsif @space %>
      <%= link_to image_tag("Plus.png", width: 45).html_safe, space_path(@parent), class: 'rotated' %>
    <% end %>
  </div>
</div>
<!-- END OF NAVBAR -->

<h1 class="question">What is the name of this new ðŸ—„ ? </h1>

<% if @shelf %>
  <%= simple_form_for @space, html: { autocomplete: 'off' } do |f| %>
    <%= f.input :name, autofocus: true, label: false, html: {autocomplete: 'disabled'}, input_html: { class: "inp-txt" } %>
    <%= f.hidden_field :shelf_id, :value => @shelf.id %>
    <div class='buttonHolder' > <%= f.submit "Add space to shelf", class: "add-btn" %> </div>
  <% end %>
<% elsif @child %>
  <%= simple_form_for @child, html: { autocomplete: 'off' } do |f| %>
    <%= f.input :name , autofocus: true, label: false, html: {autocomplete: 'disabled'}, input_html: { class: "inp-txt" } %>
    <%= f.hidden_field :parent_id, :value => @parent.id %>
    <div class='buttonHolder' > <%= f.submit "Add space to shelf", class: "add-btn" %> </div>
  <% end %>
<% end %>



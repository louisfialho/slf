<% if params.has_key?(:shelf_id) %>
  <%= link_to 'Back to shelf', shelf_path(Shelf.find(params[:shelf_id])) %>
<% end %>

<a href="<%= @space.id %>/edit">Edit space</a>

<%= link_to "Delete space",
            space_path(@space),
            method: :delete,
            data: {confirm: "Are you sure?"} %>

<h2><%= @space.name %></h2>

<div class="navbar" id="navshow">
    <%= link_to('shelf', root_path, class: 'logo') %>
    <%= link_to('Log in', new_user_session_path, class: 'login expand') %>
</div>

<div class="sign-up-ctn">

  <h2 class="welcome">ðŸ›‹ Welcome!</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :username,
                required: true,
                input_html: { autocomplete: "username", style: 'width: 300px', placeholder: 'Username', class: 'sign-up-form-control' },
                label: false %>
    <%= f.input :phone_number,
                required: true,
                input_html: { autocomplete: "phone_number", style: 'width: 300px', class: 'sign-up-form-control' },
                label: false %>
    <span id="error-msg" class="hide"></span>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email", style: 'width: 300px', placeholder: 'Email', class: 'sign-up-form-control' },
                label: false %>
    <%= f.input :password,
                required: true,
                input_html: { autocomplete: "new-password", style: 'width: 300px', placeholder: 'Password', class: 'sign-up-form-control' },
                label: false %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", style: 'width: 300px', placeholder: 'Repeat password', class: 'sign-up-form-control' },
                label: false %>
  </div>

  <div class="alert alert-info" style="display: none;"></div>

  <div class="form-actions">
    <%= f.button :submit, "Next", class: 'sign-up-cta' %>
  </div>
<% end %>


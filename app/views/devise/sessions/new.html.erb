<div class="navbar" id="navshow">
    <%= link_to('shelf', root_path, class: 'logo') %>
    <%= link_to('Sign up', new_user_registration_path, class: 'login expand') %>
</div>

<div class="log-in-ctn">

  <h2 class="welcome-back">Welcome back!</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", style: 'width: 300px', placeholder: 'Email' },
                  label: false
                  %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", style: 'width: 300px',  placeholder: 'Password'  },
                  label: false
                  %>
  <!--     <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'log-in-cta' %>
    </div>
  <% end %>

<!--  <%= render "devise/shared/links" %> -->

</div>
